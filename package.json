{
  "name": "@guardian/node-modules",
  "version": "0.1.0",
  "private": true,
  "description": "ðŸ§ª An experimental monorepo for `@guardian/*` NPM packages",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "pnpm build -r",
    "bump": "changeset version",
    "changeset": "changeset",
    "clean": "rm -rf packages/*/dist",
    "dev": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "manage-repo": "node scripts/manage-repo/index.js",
    "prepare": "husky install",
    "release": "changeset publish",
    "test": "jest",
    "tsc": "tsc",
    "verify-packages": "node scripts/verify-packages.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/package.json": "sort-package-json",
    "*.{ts,tsx,js,cjs,mjs}": "eslint --fix"
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@guardian/editorconfig": "*",
    "@guardian/eslint-config-typescript": "^0.7.0",
    "@guardian/prettier": "^0.7.0",
    "@types/jest": "^27.0.2",
    "esbuild": "^0.13.9",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.19.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-glob": "^3.2.7",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "pkg-dir": "^6.0.1",
    "prettier": "^2.4.1",
    "sort-package-json": "^1.52.0",
    "typescript": "~4.3.0",
    "update-section": "^0.3.3",
    "uvu": "^0.5.2"
  }
}
